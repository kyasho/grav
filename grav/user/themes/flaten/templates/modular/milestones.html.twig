<div class="row align-items-center">
  {% for milestone in page.header.milestones %}
    <item class="col-6 col-lg-3 text-center counter"{% if milestone.animation %} waypoint data-animation="{{ milestone.animation }}"{% endif %}>
      <counter>{% if milestone.icon %}<icon class="{{ milestone.icon }}"></icon>{% endif %}{% if milestone.prefix %}{{ milestone.prefix }}{% endif %}<span class="tweening-counter">{{ milestone.number }}</span>{{ milestone.suffix }}</counter>
      <h4>{{ milestone.title }}</h4>
    </item>
  {% endfor %}
</div>
