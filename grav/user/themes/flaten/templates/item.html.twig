{% embed 'partials/base.html.twig' %}
  {% set base_url = page.parent.url %}
  {% set feed_url = base_url %}

  {% if base_url == '/' %}
    {% set base_url = '' %}
  {% endif %}

  {% if base_url == base_url_relative %}
    {% set feed_url = base_url~'/'~page.parent.slug %}
  {% endif  %}

  {# Destroy header module cause we dont need it here #}
  {% block header %}{% endblock %}

  {% block breadcrumbs %}{% endblock %}

  {% block content %}
    <main>
      <div id="{{ page.parent.header.type }}" class="single">
        {% include 'partials/blog/' ~ page.parent.header.type ~ '.single.html.twig' with { 'truncate': false } %}
      </div>
    </main>
  {% endblock %}
{% endembed %}
