{% embed 'partials/base.html.twig' %}
  {% set collection = page.collection() %}
  {% set base_url = page.url %}
  {% set feed_url = base_url %}

  {% if base_url == '/' %}
    {% set base_url = '' %}
  {% endif %}

  {% if base_url == base_url_relative %}
    {% set feed_url = base_url~'/'~page.slug %}
  {% endif  %}

  {% if page.header.grid.enabled in ['on', 'true', 1] and page.header.type == "portfolio" %}
    {% do assets.addJs('theme://dist/lib/flickity/dist/flickity.pkgd.min.js', {'group':'grid'}) %}
    {% do assets.addJs('theme://dist/lib/isotope/dist/isotope.pkgd.min.js', {'group':'grid'}) %}
    {% set owl = '
    function getUrlParams() {
      var a, e = {},
        t = window.location.href.slice(window.location.href.lastIndexOf("/") + 1).split("&");
      return $.each(t, function (t, i) {
        a = i.split("'~config.system.param_sep~'"), e[a[0]] = a[1]
      }), e
    }
    var params = getUrlParams();
    var tag = params.tag;
    tag && ($("menu").find("filter.selected").removeClass("selected"), $("menu").find("filter[data-filter=\'." + tag + "\']").addClass("selected"), $("[data-filter=\'*\']").click(function () {
      window.location.href = "'~base_url~'"
    }));
    var fable = new Filterable(".grid", "menu > filter");
    ' %}
    {% do assets.addInlineJs(owl, {'group':'owl'}) %}
    {% set items = page.header.grid.items|default(3) %}
    {% set tags = [] %}
    {% for page in collection %}
      {% set pagetags = page.taxonomy.tag %}
      {% for tag in pagetags %}
        {% if tag not in tags %}
          {% set tags = tags|merge([tag]) %}
        {% endif %}
      {% endfor %}
    {% endfor %}
  {% endif %}

  {% block content %}
    <main>
      <div class="container">
        <div class="row">
          <div id="{{ page.header.type }}" class="col-12{% if page.header.sidebar.enabled in ['on', 'true', 1] %} col-lg-9{% endif %}{% if page.header.grid.enabled in ['on', 'true', 1] and page.header.type == "portfolio" %} loading{% endif %}">
            {% if page.header.grid.enabled in ['on', 'true', 1] and page.header.type == "portfolio" %}
              <menu role="navigation">
                <filter data-filter="*" class="selected">All</filter>
                {% for tag in tags %}
                  <filter data-filter=".{{ tag }}">{{ tag }}</filter>
                {% endfor %}
              </menu>
              <div class="grid">
              <div class="loader"><span></span></div>
              <div class="sizer col-12 col-sm-6 col-md-4 col-lg-{{ items }}"></div>
            {% endif %}

            {% for child in collection %}
              {% include 'partials/blog/' ~ page.header.type ~ '.item.html.twig' with {'page':child, 'truncate':true, 'items':items} %}
            {% endfor %}

            {% if page.header.grid.enabled in ['on', 'true', 1] and page.header.type == "portfolio" %}
              </div>
            {% endif %}

            {% if config.plugins.pagination and collection.params.pagination %}
              {% include 'partials/pagination.html.twig' with {'pagination':collection.params.pagination} %}
            {% endif %}
          </div>
          {% if page.header.sidebar.enabled in ['on', 'true', 1] %}
            {% include 'partials/sidebar.html.twig' %}
          {% endif %}
        </div>
      </div>
    </main>
  {% endblock %}
{% endembed %}
